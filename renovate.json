{
  "extends": [
    ":disableDependencyDashboard",
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "versioning": "regex:^(?<compatibility>[a-z]+)-?(?<minor>\\d+)?$"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
