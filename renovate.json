{
  "extends": [
    ":disableDependencyDashboard",
    "config:base",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ubuntu"
      ],
      "versioning": "regex:^(?<compatibility>[a-z]+)-?(?<minor>\\d+)?$"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
